<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PokemonStatus">

    <ImageView
        android:id="@+id/image_pokemo_status"
        android:layout_width="150dp"
        android:layout_height="149dp"
        app:srcCompat="@drawable/image_caterpie"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="147dp" />

    <TextView
        android:id="@+id/name_pokemon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caterpie"
        android:textColor="#000000"
        android:textSize="48sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/hp_pokemon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="418dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Defesa:"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="373dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ataque:"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="325dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP:"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="418dp" />

    <TextView
        android:id="@+id/ataque_pokemon_satus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 - 13"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/defesa_pokemon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="373dp" />

    <TextView
        android:id="@+id/texto_lutar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lutar com esse Pokemon?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="48sp"
        tools:layout_editor_absoluteY="458dp" />

    <ImageView
        android:id="@+id/button_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/yes_button"
        tools:layout_editor_absoluteY="591dp" />

    <ImageView
        android:id="@+id/button_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/no_button"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="591dp" />

</androidx.constraintlayout.widget.ConstraintLayout>